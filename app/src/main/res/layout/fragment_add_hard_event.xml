<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alex.tyler.smartscheduler.AddHardEventFragment"
    android:background="@color/blueGrey900">

    <!--TODO: Style this POS-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/mainLinearLayout">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:id="@+id/EventName"
                android:layout_weight="1"
                android:elevation="0dp"
                android:ems="1"
                android:textColor="@color/grey300"
                android:textSize="16sp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Date:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textColor="@color/grey300"
                android:textSize="16sp"
                android:textAlignment="textEnd"
                android:layout_marginRight="2dp"
                android:ems="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="1"
                android:id="@+id/dateEditText"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/grey300" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="0dp">

                    <TextView
                        android:text="Starting time:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/grey300"
                        android:textSize="16sp"
                        android:textAlignment="textEnd"
                        android:layout_marginRight="2dp"
                        android:ems="1" />

                    <TextView
                        android:text="1:30 PM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/startTime"
                        android:layout_weight="0.5"
                        android:textColor="@color/grey300"
                        android:layout_marginLeft="2dp"
                        android:ems="0"
                        android:textAlignment="textEnd" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:text="Ending time:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/grey300"
                        android:textSize="16sp"
                        android:textAlignment="textEnd"
                        android:layout_marginRight="2dp"
                        android:ems="1" />

                    <TextView
                        android:text="2:30 PM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/endTime"
                        android:layout_weight="0.5"
                        android:textColor="@color/grey300"
                        android:layout_marginLeft="2dp"
                        android:ems="0"
                        android:textAlignment="textEnd" />

                </LinearLayout>
            </LinearLayout>

            <CheckBox
                android:text="All Day"
                android:layout_height="wrap_content"
                android:id="@+id/allDayCheckbox"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textColor="@color/grey300"
                app:buttonTint="@color/grey300"
                android:checked="false"
                android:duplicateParentState="false"
                android:layout_width="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Location:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textColor="@color/grey300"
                android:textSize="16sp"
                android:textAlignment="textEnd"
                android:layout_marginRight="2dp"
                android:ems="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="1"
                android:id="@+id/locationEditText"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/grey300" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Description:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textColor="@color/grey300"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginRight="2dp"
                android:ems="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/descriptionText"
                android:layout_weight="1"
                android:textColor="@color/grey300" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="40dp" />
</RelativeLayout>
