<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alex.tyler.smartscheduler.AddHardEventFragment"
    android:background="@color/blueGrey900">

    <!--TODO: Style this POS-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainLinearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:id="@+id/EventName"
                android:layout_weight="1"
                android:elevation="0dp"
                android:ems="1"
                android:textColor="@color/grey300"
                android:textSize="16sp"
                android:textAlignment="center" />

            <Spinner
                android:layout_height="wrap_content"
                android:id="@+id/addParameter"
                android:layout_weight="1"
                android:layout_width="20dp"
                android:backgroundTint="@color/grey300"
                android:forceHasOverlappingRendering="true"
                android:spinnerMode="dialog" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:layout_weight="1">

                <TextView
                    android:text="Length:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/grey300"
                    android:textSize="16sp"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="2dp"
                    android:ems="1"
                    android:layout_gravity="center" />

                <TextView
                    android:text="2:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/endTime"
                    android:layout_weight="0.25"
                    android:textColor="@color/grey300"
                    android:layout_marginLeft="2dp"
                    android:ems="0"
                    android:textAlignment="textEnd"
                    android:layout_gravity="center" />

            </LinearLayout>

            <CheckBox
                android:text="All Day"
                android:layout_height="wrap_content"
                android:id="@+id/allDayCheckbox"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textColor="@color/grey300"
                android:buttonTint="@color/grey300"
                android:checked="false"
                android:duplicateParentState="false"
                android:layout_width="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Location:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textColor="@color/grey300"
                android:textSize="16sp"
                android:textAlignment="textEnd"
                android:layout_marginRight="2dp"
                android:ems="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="1"
                android:id="@+id/locationEditText"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/grey300" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
